<Window x:Class="MovieQuoteQuiz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieQuoteQuiz"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblTestLable1" Content="Click to start" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnTestbutton" Content="Start!" HorizontalAlignment="Left" Margin="200,100,0,0" VerticalAlignment="Top" Width="125" Click="btnTestbutton_Click"/>
        <Label x:Name="lblQuestionNumber" Content="Queston 1" HorizontalAlignment="Left" Margin="100,150,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblCurrentQuestion" Content="&quot;We're going to need a bigger boat&quot;" HorizontalAlignment="Left" Margin="100,200,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radAnswer1" Content="Pirates of the Caribbean" HorizontalAlignment="Left" Margin="100,231,0,0" VerticalAlignment="Top" x:FieldModifier="public" />
        <RadioButton x:Name="radAnswer2" Content="Titanic" HorizontalAlignment="Left" Margin="100,251,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radAnswer3" Content="Jaws" HorizontalAlignment="Left" Margin="100,270,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSubmitAnswer" Content="Submit Answer" HorizontalAlignment="Left" Margin="100,290,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="-1.813,-0.333" Click="btnSubmitAnswer_Click"/>
        <Label x:Name="lblStatusBar" Content="Status Bar" HorizontalAlignment="Left" Margin="553,291,0,0" VerticalAlignment="Top" Width="133"/>
        <Button x:Name="btnUpdateStatusBar" Content="Update" HorizontalAlignment="Left" Margin="459,295,0,0" VerticalAlignment="Top" Width="75" Click="btnUpdateStatusBar_Click"/>

    </Grid>
</Window>
